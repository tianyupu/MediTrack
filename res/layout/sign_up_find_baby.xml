<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/findBaby"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/babyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
       	android:inputType="textPersonName"
        />

   
    <Button
        android:id="@+id/findBabyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/findBabyButton" 
        android:onClick="onFindBabyClicked"
        />



    <TextView
        android:id="@+id/foundBabyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/foundBabyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/foundBaby" 
        android:visibility="invisible"
        android:onClick="onFoundBabyClicked"
        />

</LinearLayout>