<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <Button
        android:id="@+id/button_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_table"
        android:text="Graph"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/linear_layout_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_table"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/button_selectdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_graph"
        android:text="Select Dates"
        tools:ignore="HardcodedText" />

</RelativeLayout>